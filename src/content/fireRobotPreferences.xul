<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet type="text/css" href="chrome://firerobot/skin/firerobot.css" ?>
<!DOCTYPE overlay SYSTEM "chrome://firerobot/locale/fireRobot.dtd">
<prefwindow 
   xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
   onload="FireRobot.Preferences.loadLocatorListBoxes();" 
   class="frBase">
    <script
      type="application/x-javascript" 
      src="chrome://firerobot/content/fireRobotPreferences.js" />
    <stringbundleset id="string-bundle-set">
        <stringbundle id="string-bundle" src="chrome://firerobot/locale/fireRobot.properties"/>
    </stringbundleset>
    <prefpane 
      id="locator-preferences">
        <preferences>
            <preference 
              id="pref-enabled-locators" 
              name="extensions.firerobot.enabled-locators" 
              type="string" />
            <preference 
               id="pref-create-variables" 
               name="extensions.firerobot.variables.create" 
               type="bool"/>
            <preference 
               id="pref-use-variables" 
               name="extensions.firerobot.variables.use" 
               type="bool"/>
        </preferences>
        <vbox>
            <hbox 
               align="center">
                <vbox>
                    <label 
                     value="&firerobot.preferences.dis-loc;" 
                     control="disabled-locators-list"/>
                    <listbox 
                     id="disabled-locators-list" 
                     class="testBox" 
                     seltype="single" 
                     rows="8"  
                     width="150" 
                     height="205"/>
                </vbox>
                <vbox 
                  align="center">
                    <img 
                     id="enableLocatorButton" 
                     class="btn" title="Enable Locator"
                     tooltiptext="&firerobot.preferences.enable-loc-btn;"  
                     onclick="FireRobot.Preferences.enableLocator();"/>
                    <img 
                     id="disableLocatorButton" 
                     class="btn" 
                     tooltiptext="&firerobot.preferences.disable-loc-btn;" 
                     onclick="FireRobot.Preferences.disableLocator();"/>
                </vbox>
                <vbox>
                    <label 
                     value="&firerobot.preferences.enb-loc;" 
                     control="disabled-locators-list"/>
                    <listbox 
                     id="enabled-locators-list" 
                     class="testBox" 
                     seltype="single" 
                     rows="8"  
                     width="150" 
                     height="205"></listbox>
                </vbox>
                <vbox 
                  align="center">
                    <img 
                     id="upLocatorButton" 
                     class="btn" 
                     tooltiptext="&firerobot.preferences.inc-loc-pri-btn;" 
                     onclick="FireRobot.Preferences.decreaseLocatorIndex();"/>
                    <img 
                     id="downLocatorButton" 
                     class="btn" 
                     tooltiptext="&firerobot.preferences.dec-loc-pri-btn;" 
                     onclick="FireRobot.Preferences.increaseLocatorIndex();"/>
                </vbox>
            </hbox>
            <separator 
               orient="horizontal" 
               class="groove" />
            <checkbox 
               id="genVarCheckBox" 
               checked="true" 
               label="&firerobot.preferences.create-var;" 
               preference="pref-create-variables"/>
            <checkbox 
               id="useVarCheckBox" 
               checked="true" 
               label="&firerobot.preferences.use-var;" 
               preference="pref-use-variables"/>
        </vbox>
    </prefpane>
</prefwindow>