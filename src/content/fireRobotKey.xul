<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet type="text/css" href="chrome://firerobot/skin/firerobot.css" ?>
<!DOCTYPE overlay
  SYSTEM 'chrome://firerobot/locale/fireRobot.dtd'>
<prefwindow 
  class="frBase" 
  id="keyword-window" 
  ondialogaccept="return FireRobot.Key.addKey();" 
  onload="FireRobot.Key.loadSelSteps();" 
  title="Extract Keyword" 
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script 
    src="chrome://firerobot/content/fireRobotKey.js" 
    type="application/x-javascript"/>
  <stringbundleset id="string-bundle-set">
    <stringbundle 
      id="string-bundle" 
      src="chrome://firerobot/locale/fireRobot.properties"/>
  </stringbundleset>
  <prefpane flex="1">
    <preferences id="keyword-panel">
      <preference 
        id="pref-key-replace" 
        name="extensions.firerobot.key.replace" 
        type="bool"/>
     <preference 
        id="pref-key-target" 
        name="extensions.firerobot.key.target" 
        type="string"/>
    </preferences>
    <vbox flex="1">
      <spacer style="height: 5px"/>
      <hbox align="center">
        <textbox
          id="keyNameBox"
          class="testBox" 
          flex="1"
          placeholder="&firerobot.key.placeholder1;"/>
        <description>[Arguments]  </description>
        <textbox 
         class="testBox" 
		 flex="3" 
		 id="keyVarBox"/>
      </hbox>
      <textbox
        id="keyStepsArea" 
        class="testBox"
        flex="1" 
        multiline="true" 
        rows="16" 
        type="unichar"/>
      <spacer style="height: 5px"/>
      <radiogroup id="key_target" preference="pref-key-target">
        <radio value="self" label="&firerobot.key.target_self;"/>
        <radio value="res_file" label="&firerobot.key.target_file;"/>
      </radiogroup>
      <hbox align="center">
        <spacer style="width: 20px"/>
        <textbox
          id="resFileBox"
          class="testBox" 
          flex="1"  
          placeholder="&firerobot.key.placeholder2;"/>
        <img
          id="selResButton" 
          class="btn" 
          onclick="FireRobot.Key.selectResForKey()" 
          tooltiptext="&firerobot.key.placeholder2;"/>
      </hbox>
      <hbox>
        <spacer style="width: 20px"/>
        <description>&firerobot.key.warn_res_file;</description>
      </hbox>
      <spacer style="height: 5px"/>
      <checkbox 
        id="useVarCheckBox"
        checked="true"
        label="&firerobot.key.replace;" 
        preference="pref-key-replace"/>
    </vbox>
  </prefpane>
</prefwindow>